<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details :</h3>
        </div>
    </div>
        <div class="card col-6 offset-3">
            <img src="<%= data.image %>" class="card-img-top show-img"
                alt="listing-image">
            <div class="card-body">
                <p class="card-text">
                    <b><%=data.title%></b><br>
                    <%= data.description %> <br>
                    &#8377;<%= data.price.toLocaleString("en-in") %> <br>
                    <%= data.location%> <br>
                    <%= data.country%> <br>
                </p>
            </div>
        </div>

        <ul>
            
            <div class="btns ">
                <a href="/listings/<%= data._id %>/edit" class="btn add-btn col-1 offser-3">Edit</a>

                <form action="/listings/<%= data._id %>/delete?_method=DELETE"
                    method="POST">
                    <button class="btn btn-dark offset-3">Delete</button>
                </form>
            </div>
            
           
        </ul>

    
</body>
