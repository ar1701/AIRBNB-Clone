<% layout("./layouts/boilerplate.ejs") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Your Listing:-</h2>
            <form action="/listings/<%= data._id %>/edit?_method=PUT" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" name="list[title]" value="<%=data.title%>"class="form-control" required>
                    <div class="valid-feedback">Title Looks Good</div>
                </div>
                
                <div class="mb-3">
                    <label for="des">Description:</label>
                    <textarea type="text" name="list[description]" placeholder="<%=data.description%>"class="form-control" required></textarea>
                    <div class="invalid-feedback">Enter a nice description</div>
                </div>
                
                <div class="mb-3">
                    <label for="img">Image URL:</label>
                    <input type="text" name="list[image]" value="<%=data.image%>"class="form-control" required>

                </div>
                
                <div class="mb-3">
                    <label for="price">Price</label>
                    <input type="number" name="list[price]" value="<%=data.price%>"class="form-control" required>
                    <div class="invalid-feedback">price</div>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="loc">Location:</label>
                        <input type="text" name="list[location]" value="<%=data.location%>"class="form-control" required>
                        <div class="invalid-feedback">location</div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="country">country:</label>
                        <input type="text" name="list[country]" value="<%=data.country%>"class="form-control" required>
                        <div class="invalid-feedback">country</div>
                    </div>
                </div>
               
                
                <button class="btn btn-dark add-btn mt-3 mb-4">Update</button>
            </form>
        </div>
       
    </div>
   
</body>
