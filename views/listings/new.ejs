<% layout("./layouts/boilerplate.ejs") %>

<body>
    <br><br>
    <h2 class="offset-2">Creating a New Listing</h2>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <form action="/listings/new" method="post" class="needs-validation"
                novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" name="list[title]"
                        placeholder="Enter Title"
                        id="title" class="form-control" required>
                    <div class="valid-feedback">Title Looks Good</div>
                </div>

                <div class="mb-3">
                    <label for="des">Description:</label>
                    <textarea type="text" name="list[description]"
                        placeholder="Enter Description" id="des"
                        class="form-control" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="img">Image URL:</label>
                    <input type="text" name="list[image]" placeholder="URL"
                        id="img" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="price">Price</label>
                    <input type="number" name="list[price]"
                        placeholder="Enter Price"
                        id="price" class="form-control" required>
                    <div class="invalid-feedback">price</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="loc">Location:</label>
                        <input type="text" name="list[location]"
                            placeholder="Enter Location" id="loc"
                            class="form-control" required>
                        <div class="invalid-feedback">location</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country">country:</label>
                        <input type="text" name="list[country]"
                            placeholder="Enter Country"
                            id="counter" class="form-control" required>
                        <div class="invalid-feedback">country</div>
                    </div>
                </div>

                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>

</body>
